{
  "name": "fuegojs",
  "description": "Opinionated static site generation framework built on React, Esbuild, and AWS",
  "version": "0.2.18",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "cross-env NODE_ENV=test npm t",
    "build": "esbuild src/index.ts src/cli.ts src/_html.tsx --outdir=dist --bundle --external:esbuild --external:react --external:react-dom --platform=node --target=node12",
    "format": "prettier --write \"src/**/*\"",
    "lint": "eslint . --ext .ts,.tsx",
    "prepublishOnly": "npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push origin main && git push --tags",
    "pretest": "npm run lint",
    "test": "jest --config jestconfig.json"
  },
  "files": [
    "/dist"
  ],
  "peerDependencies": {
    "react": "^16.8.0 || ^17",
    "react-dom": "^16.8.0 || ^17"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/git-repo-name": "^1.0.1",
    "@types/jest": "^27.0.1",
    "@types/mime-types": "^2.1.1",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react-hooks": "^2.2.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "aws-sdk": "^2.975.0",
    "esbuild": "^0.12.22",
    "git-repo-name": "^1.0.1",
    "mime-types": "^2.1.32",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2"
  },
  "bin": {
    "fuego": "./dist/cli.js"
  }
}
